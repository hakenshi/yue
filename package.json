{
  "name": "yue-agent",
  "private": true,
  "scripts": {
    "build": "TURBO_TELEMETRY_DISABLED=1 turbo run build",
    "dev": "TURBO_TELEMETRY_DISABLED=1 turbo run dev",
    "lint": "TURBO_TELEMETRY_DISABLED=1 turbo run lint",
    "test": "bun test tests/modules tests/apps",
    "test:security": "bun test tests/security",
    "test:stress": "bun test tests/stress",
    "test:all": "bun test tests",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "TURBO_TELEMETRY_DISABLED=1 turbo run check-types"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.7.4",
    "turbo": "^2.8.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@better-auth/stripe": "1.4.18",
    "@elysiajs/eden": "^1.2.0",
    "stripe": "^20.0.0"
  }
}
