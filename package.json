{
  "name": "yue-agent",
  "private": true,
  "scripts": {
    "build": "TURBO_TELEMETRY_DISABLED=1 turbo run build",
    "dev": "TURBO_TELEMETRY_DISABLED=1 turbo run dev",
    "lint": "TURBO_TELEMETRY_DISABLED=1 turbo run lint",
    "test": "TURBO_TELEMETRY_DISABLED=1 turbo run test --filter=api",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "TURBO_TELEMETRY_DISABLED=1 turbo run check-types"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.7.4",
    "turbo": "^2.8.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
