{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@packages/*": ["../packages/*"],
      "@apps/*": ["../apps/*"],
      "@api/*": ["../apps/api/src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": ["**/*", "../apps/api/src/**/*"],
  "exclude": ["node_modules"]
}
